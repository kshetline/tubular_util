{
  "name": "@tubular/util",
  "version": "3.0.0",
  "description": "Miscellaneous utility functions",
  "type": "module",
  "browser": "dist/index.umd.js",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "typings": "dist/index",
  "scripts": {
    "build": "npm run set-module && rimraf dist/ && tsc && webpack && webpack --env target=umd",
    "prepublishOnly": "npm run build",
    "lint": "eslint 'src/**/*.ts'",
    "set-cjs": "replace --silent '\"type\": \"module\"' '\"type\": \"commonjs\"' package.json",
    "set-module": "replace --silent '\"type\": \"commonjs\"' '\"type\": \"module\"' package.json",
    "test": "npm run set-cjs && (karma start --single-run --watch=false || true) && npm run set-module"
  },
  "keywords": [
    "canvas",
    "font",
    "string",
    "utility"
  ],
  "author": "Kerry Shetline <kerry@shetline.com>",
  "license": "MIT",
  "dependencies": {
    "@tubular/math": "^2.0.2",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "@types/jasmine": "^3.6.2",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.16.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jasmine": "^4.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "esm": "^3.2.25",
    "jasmine-core": "^3.6.0",
    "jasmine-spec-reporter": "^6.0.0",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "karma-typescript": "^5.2.0",
    "karma-typescript-es6-transform": "^5.2.0",
    "replace": "^1.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0",
    "webpack-node-externals": "^2.5.2"
  },
  "repository": "https://github.com/kshetline/tubular_util.git"
}
